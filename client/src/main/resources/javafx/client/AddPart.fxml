<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="javafx.client.AddPartController" spacing="15" alignment="center" prefHeight="250" prefWidth="350" styleClass="form-container">

    <Label text="Add New Part" styleClass="form-title" />

    <TextField fx:id="nameField" promptText="Part Name" styleClass="input-field"/>
    <TextField fx:id="descriptionField" promptText="Part Description" styleClass="input-field"/>
    <TextField fx:id="isPrimitiveField" promptText="Is Primitive (true/false)" styleClass="input-field"/>

    <HBox spacing="10" alignment="center">
        <Button text="Add" onAction="#onAddPart" styleClass="success-button"/>
        <Button text="Cancel" onAction="#onCancel" styleClass="cancel-button"/>
    </HBox>
</VBox>
